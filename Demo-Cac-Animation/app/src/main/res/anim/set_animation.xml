<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <scale
        android:fromXScale="1.0" android:toXScale="3.0"
        android:fromYScale="1.0" android:toYScale="3.0"
        android:pivotX="50%" android:pivotY="50%"
        android:fillAfter="false" android:duration="6000" />

    <alpha
        android:fromAlpha="1.0" android:toAlpha="0.2"
        android:duration="3000"
        android:fillAfter="true"
        />

    <alpha
        android:startOffset="3000"
        android:fromAlpha="0.2" android:toAlpha="1.0"
        android:duration="2000"
        android:fillAfter="true"
        />

    <rotate
        android:startOffset="6000"
        android:pivotY="50%" android:pivotX="50%"
        android:fromDegrees="0" android:toDegrees="360"
        android:duration="3000"
        />
</set>