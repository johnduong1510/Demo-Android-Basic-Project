<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:shareInterpolator="true"
    >
    <rotate
        android:fromDegrees="0" android:toDegrees="-360"
        android:toYScale="0.0" android:pivotX="50%" android:pivotY="50%"
        android:startOffset="100" android:duration="6000" />

    <translate
        android:fromXDelta="100%" android:toXDelta="-100"
        android:fromYDelta="60%" android:toYDelta="0"
        android:duration="4000" android:zAdjustment="top" />

</set>